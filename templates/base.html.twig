<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Gourmango{% endblock %}</title>

        <!-- Подключаем стили -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
              integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
              crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
        
        {% block stylesheets %}{% endblock %}
        {{ encore_entry_link_tags('app') }}
    </head>

    <body>
        <!-- Информация и меню -->
        <section id="promocat">
            <div class="adress d-flex justify-content-between">
                <div>+4733378901  Email: food@restan.com</div>
                <div>175 10h Street, Office 375 Berlin, De 21562</div>
            </div>
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Переключатель навигации">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item"><a class="nav-link active" aria-current="page" href="{{ path('app_login') }}"><i class="fa-solid fa-user"></i></a></li>
                              <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="{{ path('app_accueil') }}">HOME</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_plat') }}">TOUS LES PLATS</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="{{ path('app_categories') }}">CATÉGORIES</a>
                            </li>
                        </ul>
                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="Recherche" aria-label="Recherche">
                            <button class="btn btn-outline-success" type="submit">Rechercher</button>
                        </form>
                    </div>
                </div>
            </nav>
            
            <div id="content">
                <div id="logo" class="d-flex">
                    <img src="{{ asset('build/images/logonoir-removebg-preview.png') }}">
                </div>
            </div>
        </section>

        <!-- React-приложение -->
        {% block body %}
            <div id="root"></div>
        {% endblock %}

        <!-- Корзина -->
        <div class="floating-cart">
            <a href="{{ path('app_panier') }}" class="cart-link">
                <i class="fas fa-shopping-cart"></i>
                <span id="cart-counter" class="cart-counter">0</span>
            </a>
        </div>

        <!-- Футер -->
        <section class="foot">
            <div class="d-flex justify-content-center">
                <div><p>Politique de confidentialité</p></div>
                <div><img src="{{ asset('build/images/fb.png') }}"></div>
                <div><img src="{{ asset('build/images/instagram.png') }}"></div>
                <div><img src="{{ asset('build/images/telegram.png') }}"></div>
                <div><img src="{{ asset('build/images/whatsapp.png') }}"></div>
                <div><img src="{{ asset('build/images/pinterest.png') }}"></div>
                <div><p>Mentions légales</p></div>
            </div>
        </section>

        <!-- Подключаем JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" 
                crossorigin="anonymous"></script>
        
        {{ encore_entry_script_tags('app') }}
<script src="{{ asset('build/card.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
