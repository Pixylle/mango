{% extends 'base.html.twig' %}


{% block body %}
<section class="menu-section">
    <div class="menu-container">
        {% for plat in plats %}
        <div class="custom-card">
            <img src="{{ asset('build/images/' ~ plat.image) }}" class="custom-card-img">
            <h5 class="custom-card-title">{{ plat.title }}</h5>
            <p class="custom-card-description">{{ plat.description }}</p>
            <p class="custom-card-price">{{ plat.prix }} â‚¬</p>
            <div class="custom-card-footer">
                <input type="number" name="quantite" min="1" value="1" class="custom-card-quantity" id="quantity-{{ plat.id }}">
                <button type="button" class="custom-card-btn " data-id="{{ plat.id }}">
                    <i class="fa fa-shopping-cart"></i> Ajouter
                </button>
            </div>
        </div>
        {% endfor %}
        
{% if is_granted('ROLE_ADMIN') %}
   <div class="d-flex justify-content-center align-items-center">
    <a href="{{ path('app_plat_new') }}" class="custom-card-btn add-new-plat-btn">
        Ajouter un nouveau plat
    </a>
</div>
{% endif %}

   
    </div>
</section>
{% endblock %}
