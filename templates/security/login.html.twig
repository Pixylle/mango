{% extends 'base.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 45vh;">
    <form method="post" style="width: 100%; max-width: 400px;">
        {% if error %}
            <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="alert alert-info text-center">
                You are logged in as {{ app.user.userIdentifier }},
                <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h4 mb-3 text-center">Sign Up</h1>
        
        <div class="mb-3">
            <label for="inputEmail" class="form-label">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        </div>

        <div class="mb-3">
            <label for="inputPassword" class="form-label">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="text-center">
            <button type="submit" class="custom-card-btn w-100 mb-3">Sign In</button>
            <a href="{{ path('app_register') }}" class="btn btn-secondary w-100">Register</a>
        </div>
    </form>
</div>
{% endblock %}
